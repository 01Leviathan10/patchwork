SplitView {
  display: flex
  flex: 3
  div.main {
    display: flex
    flex-direction: column
    overflow-y: auto
  }
  div.side {
    width: 25vw;
    padding: 20px;
    overflow-y: auto;

    -right {
      border: none
      border-left: 1px solid #dcdcdc
      background: linear-gradient(100deg, #ffffff, #f9ecca);
    }

    h2 {
      margin-top: 20px
      margin-bottom: 8px
      color: #527b90;
      text-shadow: 0px 0px 3px #fff;
      font-weight: normal;
      span.sub {
        font-weight: normal
        font-size: 90%
      }
    }
  }
}
