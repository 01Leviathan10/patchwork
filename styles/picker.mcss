Picker {
  a {
    padding: 6px;
    display: inline-block;
    background: #fff;
    margin: 3px;
    border: 1px solid #EEE;

    img {
      width: 50px
      height: 50px
      display: block
    }

    -self {
      border-color: #b3d6bd;
      background: #fbfffb;
      color: #719a68;
    }

    -assigned {
      padding: 4px;
      border: 2px solid #ffa800;
      box-shadow: 0px 1px 2px #ff8d00;
      color: #a8702a;
      font-weight: bold;
    }
  }
}
